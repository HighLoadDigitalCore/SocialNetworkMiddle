@model User
@{
    ViewBag.Title = "Удаление пользователя";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Удаление пользователя</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        
        <h3>Вы действительно хотите удалить пользователя "@Model.Profile.FullName" и все связанные с ним данные из системы?</h3>
        <br />
        <input type="submit" value="Удалить" />
    </fieldset>
}

<div class="backref">
    @Html.ActionLinkQuery("Назад к списку", "Index", "Users", new[] { "role", "query", "page" })
</div>
