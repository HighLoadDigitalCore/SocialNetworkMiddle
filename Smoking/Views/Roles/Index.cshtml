@{
    ViewBag.Title = "Типы пользователей";
    Layout = "~/Views/Shared/_Master.cshtml";
}

@model IEnumerable<Role>
<h2>Список типов пользователей</h2>
<fieldset>
    <table class="grid" style="width: 100%">
        <tr>
            <th>Идентификатор
            </th>
            <th>Название
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(role.RoleName, "Edit", "Roles", new { RoleID = role.RoleId }, null)
                </td>
                <td>@role.Description
                </td>
                <td>@Html.ActionLink("пользователи", "Index", "Users", new { role = role.RoleId }, null)
                </td>
                <td>
                    @(role.CanDelete ? Html.ActionLink("удалить", "Delete", "Roles", new { RoleID = role.RoleId }, null) : new MvcHtmlString(""))
                </td>
            </tr>
        }
    </table>
</fieldset>
<div class="backref">
    @Html.ActionLink("Добавить", "Edit")
</div>
