@model Role
@{
    ViewBag.Title = "Редактирование типов пользователей";
    Layout = "~/Views/Shared/_Master.cshtml";
}
<h2>
    @(Model.IsCreating ? "Создание нового типа пользователей" : "Редактирование типа пользователей")</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.RoleName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.RoleName, (Model.CanEditUID ? new { } : (object)new { disabled = "disabled", @readonly = "readonly" }))
            @Html.ValidationMessageFor(model => model.RoleName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <br />
        <input type="submit" value="Сохранить" />
    </fieldset>
  
}
<div class="backref">
    @Html.ActionLinkQuery("Назад к списку", "Index", "Roles", new[] { "" /*"RoleID"*/ })
</div>
